config defaultToCurrentScreen true
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true
config windowHintsFontSize 70
config windowHintsIconAlpha 0.5

# Window Hints
bind e:cmd hint `1234567890-=

# Grid
# bind g:cmd grid padding:5 0:10,10 0:10,10 0:10,10

# monitors
#   alias <name> <displayID>
alias LEFTMOST 0
alias MIDDLEMOST 1

# pre-defined window sizes
#   alias <name> move <xPos>;<yPos> <xSize>;<ySize>
alias lefthalflarge move screenOriginX;screenOriginY screenSizeX*0.6;screenSizeY
alias righthalflarge move screenOriginX+screenSizeX*0.4;screenOriginY screenSizeX*0.6;screenSizeY
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf move screenOriginX;screenOriginY screenSizeX*0.5;screenSizeY
alias righthalf move screenOriginX+screenSizeX*0.5;screenOriginY screenSizeX*0.5;screenSizeY
alias righthalfsmall move screenOriginX+screenSizeX*0.6;screenOriginY screenSizeX*0.4;screenSizeY
alias lefthalfsmall move screenOriginX;screenOriginY screenSizeX*0.4;screenSizeY
alias trileft move screenOriginX;screenOriginY screenSizeX*0.26;screenSizeY
alias trimiddle move screenOriginX+screenSizeX*0.26;screenOriginY screenSizeX*0.4;screenSizeY
alias triright move screenOriginX+screenSizeX*0.66;screenOriginY screenSizeX*0.34;screenSizeY

# pre-defined screen positions
#   alias <name> <sizeAlias> <monitorAlias>
alias MIDDLEMOST-primary-left ${trileft} ${MIDDLEMOST}
alias MIDDLEMOST-secondary-left ${trileft} ${MIDDLEMOST}
alias MIDDLEMOST-primary-middle ${trimiddle} ${MIDDLEMOST}
alias MIDDLEMOST-secondary-middle ${trimiddle} ${MIDDLEMOST}
alias MIDDLEMOST-primary-right ${triright} ${MIDDLEMOST}
alias LEFTMOST-primary-left ${lefthalf} ${LEFTMOST}
alias LEFTMOST-secondary-left ${lefthalf} ${LEFTMOST}
alias LEFTMOST-primary-right ${righthalf} ${LEFTMOST}
alias LEFTMOST-secondary-right ${righthalf} ${LEFTMOST}

# 'docked' layout definitions
#   layout <layoutName> <appName>:<OPTIONS> <COMMANDS>

layout docked 'Slack':MAIN_FIRST ${LEFTMOST-primary-right}
layout docked 'Tower':MAIN_FIRST ${MIDDLEMOST-secondary-left}
layout docked 'Todoist':MAIN_FIRST ${LEFTMOST-secondary-right}
layout docked 'Spark':MAIN_FIRST ${LEFTMOST-secondary-left}
layout docked 'Spotify':MAIN_FIRST ${LEFTMOST-secondary-left}
layout docked 'Google Chrome':TITLE_ORDER_REGEX=hangouts|slack|jqbx.fm;calendar.google.com|modolabs.jira.com|github.com|rollbar.com;\.modo|\.modolabs\.net|docs.google.com|drive.google.com; ${LEFTMOST-primary-left} | ${MIDDLEMOST-primary-right} | ${MIDDLEMOST-primary-left}
layout docked 'PhpStorm':MAIN_FIRST ${MIDDLEMOST-primary-middle}
layout docked 'Sublime Text':MAIN_FIRST ${MIDDLEMOST-secondary-middle}

# 'undocked' layout definitions
#   layout <layoutName> <appName>:<OPTIONS> <COMMANDS>
# TODO

# bind layouts
#   bind <keyBinding> layout <layoutName>
bind 1:cmd;shift layout docked
