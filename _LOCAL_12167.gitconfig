[init]
    templatedir = ~/.dotfiles/.git-template
	defaultBranch = main
[user]
	name = Wil Hall
	email = wil@wilhall.com
	signingkey = 26C86982F8826802
[blame]
    ignoreRevsFile = .git-blame-ignore-revs
[core]
    editor = nvim
    excludesfile = ~/.dotfiles/.gitignore
    trustctime = false
	pager = diff-so-fancy | less --tabs=4 -RFX
[push]
    autoSetupRemote = true
    default = current
[pack]
    windowMemory = 10m
    packSizeLimit = 20m
[checkout]
  defaultRemote = origin
[branch]
    autosetuprebase = always
[pull]
    rebase = true
    default = current
[difftool]
	prompt = false
	trustExitCode = true
[log]
  date = relative
[format]
  pretty = format:%h %Cblue%ad%Creset %ae %Cgreen%s%Creset
[alias]
    pair = mob
    solo = mob solo
    wdiff = diff -w --word-diff=color
    slog = log --pretty=oneline --abbrev-commit
    set-upstream = !git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`
    branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
    whatadded = log --diff-filter=A
    whatremoved = log --diff-filter=D
    whatchanged = log --diff-filter=ADM
    filelist = diff-tree --no-commit-id --name-status -r
    mru = for-each-ref --sort=-committerdate --count=10 refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
    root = rev-parse --show-toplevel
[github]
    user = WilHall
[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
[rebase]
    autosquash = true
[interactive]
	diffFilter = diff-so-fancy --patch
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[merge]
	tool = fork
[git-mob-config]
	github-fetch = true
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool]
	prompt = false
[merge]
	tool = Kaleidoscope