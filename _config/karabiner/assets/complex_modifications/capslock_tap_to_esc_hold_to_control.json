{
  "title": "Change CapsLock to Esc if tapped, Ctrl if held",
  "rules": [
	{
	  "description": "Change CapsLock to Esc if tapped, Ctrl if held",
	  "manipulators": [
        {
    "type": "basic",
    "from": {
        "key_code": "caps_lock",
        "modifiers": {
            "optional": [
                "any"
            ]
        }
    },
    "to": [
        {
            "key_code": "left_control"
        }
    ],
    "to_if_alone": [
        {
            "key_code": "escape"
        }
    ]
}
	  ]
	}
  ]
}
