" General Vim Settings

syntax on
set nocompatible
set showcmd
set clipboard=unnamedplus
autocmd InsertEnter,InsertLeave * set cul!
let &t_SI.="\e[5 q"
let &t_SR.="\e[4 q"
let &t_EI.="\e[1 q"

let mapleader = "\<Space>"

set number
set numberwidth=5
set number norelativenumber

set linebreak
set wrap
autocmd VimResized * | set columns=120
set colorcolumn=120

set list
set showbreak=↪\
set listchars=tab:→\ ,eol:¬,space:·,nbsp:␣,trail:·,extends:⟩,precedes:⟨

map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>

imap <up> <nop>
imap <down> <nop>
imap <left> <nop>
imap <right> <nop>

" vim:ft=vim

