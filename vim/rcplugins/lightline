" A light and configurable statusline/tabline plugin for Vim

Plug 'itchyny/lightline.vim'

let g:lightline = {
      \ 'colorscheme': 'onehalfdark',
      \ 'active': {
      \   'left': [ ['mode', 'paste' ],
      \             ['gitbranch', 'readonly', 'relativepath', 'modified' ] ]
      \ },
      \ 'component_function': {
      \   'gitbranch': 'fugitive#head'
      \ },
      \ }

" Don't show the mode line
set noshowmode

" vim:ft=vim
